<h1>Recent Blog Posts</h1>


<% @posts.each do |post| %>
	<div class="post">
    <h2><%= link_to post.title, post %></h2>
    <p>By: <%= post.name %></p>
    <div class="post-body"><%= post.content %></div>
    <p class="al-rt"><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
<% end %>


<%= link_to 'New Post', new_post_path %>
